   <from uri="${netty.ifpl.url}" />
   <marshal>
    <jaxb contextPath="ch.skyguide.fixm.extension.flight.enroute" prettyPrint="true" />
   </marshal>
   <to uri="log:ch.skyguide.fuse.prototype.ifplservice?level=DEBUG" />
